GITHUB_TOKEN=YOUR_GITHUB_TOKEN_HERE
PORT=8080
WORKER_POOL_SIZE=5
REQUEST_TIMEOUT=30s

# MongoDB Configuration (Optional)
MONGO_URI=mongodb+srv://<YOUR_USERNAME>:<YOUR_PASSWORD>@<YOUR_CLUSTER>.mongodb.net

# Redis Cache Configuration with Upstash (Optional)
REDIS_URI=rediss://default:<PASSWORD>@<HOSTNAME>.upstash.io:6379
CACHE_TTL=1h

# Rate limiting configuration
MIN_DAYS_BETWEEN_REFRESHES=3 # Minimum days required between documentation refreshes

# JWT Authentication Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_DURATION=15m # Access token duration (default: 15 minutes)
JWT_REFRESH_DURATION=168h # Refresh token duration (default: 7 days)
JWT_ISSUER=github-docs-api
